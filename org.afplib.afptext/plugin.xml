<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
	<extension point="org.eclipse.emf.ecore.generated_package">
		<package 
			uri = "http://www.afplib.org/AfpText"
			class = "org.afplib.afpText.AfpTextPackage"
			genModel = "model/generated/AfpText.genmodel" />
	</extension>
 <extension
       point="org.eclipse.ui.menus">
    <menuContribution
          allPopups="false"
          locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?endof=group.reorganize">
       <command
             commandId="org.afplib.afptext.convert2text"
             style="push">
          <visibleWhen>
             <with
                   variable="activeMenuSelection">
                <iterate
                      ifEmpty="false">
                   <adapt
                         type="org.eclipse.core.resources.IResource">
                      <test
                            property="org.eclipse.core.resources.name"
                            value="*.afp">
                      </test>
                   </adapt>
                </iterate>
             </with>
          </visibleWhen>
       </command>
    </menuContribution>
 </extension>
 <extension
       point="org.eclipse.ui.commands">
    <command
          id="org.afplib.afptext.convert2text"
          name="Convert To Text">
    </command>
 </extension>
 <extension
       point="org.eclipse.ui.handlers">
    <handler
          class="org.afplib.Convert2Text"
          commandId="org.afplib.afptext.convert2text">
    </handler>
 </extension>
</plugin>
